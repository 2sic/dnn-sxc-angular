        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "outDir": "lib",
        "lib": [
            "dom",
            "es6",
            "dom.iterable",
            "scripthost",
            "es2017.object"
        ]
    },
    "resolution": "typings",
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}