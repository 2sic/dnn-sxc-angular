{
    "compileOnSave": true,
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": false,
        "noImplicitAny": true,
        "sourceMap": true,
        "inlineSources": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "lib": [
            "dom",
            "es6",
            "dom.iterable",
            "scripthost",
            "es2017.object"
        ],
        "typeRoots": [
            "node_modules/@2sic.com"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}